doctype html
html(lang="es")
  head
    title Tu Aplicación HIS
    // Bootstrap CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet")
    // Bootstrap Icons CSS (usando CDN)
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css")
    // Animate.css
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css")
    style.
      body {
        background-image: url('/img/fondo-hospital.png'); /* Asegúrate de que esta ruta sea correcta */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh; /* Asegura que el fondo cubra toda la altura */
        display: flex;
        flex-direction: column;
        justify-content: center; /* Centra el contenido verticalmente */
        align-items: center; /* Centra el contenido horizontalmente */
        margin: 0;
        color: #fff; /* Color de texto blanco para contrastar con el fondo oscuro */
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); /* Sombra para mejor lectura del texto */
      }
      .main-content {
        background-color: rgba(0, 0, 0, 0.5); /* Aumento la transparencia a 0.5 (antes 0.75) */
        padding: 0px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        max-width: 1200px; /* Ancho máximo para el contenedor del contenido */
        width: 100%;
        text-align: center;
      }
      .card {
        background-color: rgba(0, 0, 0, 0.5); /* Mantengo la opacidad de las tarjetas internas para buena legibilidad */
        padding: 0px;
        border: none;
      }
      .card-title, .card-text {
        color: #fff; /* Color de texto blanco para los títulos y textos de las tarjetas */
        text-shadow: none;
      }
      /* ESTILOS PARA LOS ELEMENTOS DEL FORMULARIO */
      .card-body label.form-label {
        color: #fff; /* Etiquetas de formulario en blanco */
      }
      .card-body .form-control,
      .card-body .form-select,
      .card-body textarea {
        background-color: rgba(255, 255, 255, 0.8); /* Fondo semi-transparente blanco para inputs */
        color: #333; /* Texto negro en los inputs para legibilidad */
        border-color: rgba(255, 255, 255, 0.4);
      }
      .card-body .form-control:focus,
      .card-body .form-select:focus,
      .card-body textarea:focus {
        background-color: #fff; /* Fondo blanco sólido al enfocar */
        color: #333;
        border-color: #007bff;
        box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
      }
      /* ESTILOS PARA RADIOS Y CHECKBOXES (MODIFICADO) */
      .form-check-label {
        color: #fff; /* Esto ya debería haber aplicado, pero lo reaseguro. */
      }
      .form-check-inline { /* Añade este selector para los contenedores de las radios/checkboxes */
        color: #fff; /* Fuerza el color blanco para el texto dentro de estas etiquetas inline */
      }


      /* Ajustes específicos para los botones */
      .btn-primary {
        background-color: #007bff; /* Azul estándar de Bootstrap */
        border-color: #007bff;
        color: white; /* Texto blanco para el botón */
        padding: 15px 30px;
        font-size: 1.25rem;
        border-radius: 8px;
        transition: all 0.3s ease;
      }
      .btn-primary:hover {
        background-color: #0056b3; /* Azul más oscuro al pasar el mouse */
        border-color: #0056b3;
        transform: translateY(-3px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
      }
      /* Cuidado: Reutilizando .btn-success y .text-success para rojo */
      .btn-success { /* Este es ahora el botón de Emergencia (Rojo) */
        background-color:rgba(30, 255, 0, 0.6); /* Rojo más intenso (Material Design red 700) */
        border-color:rgb(0, 0, 0);
        color: white;
        padding: 15px 30px;
        font-size: 1.25rem;
        border-radius: 8px;
        transition: all 0.3s ease;
      }
      .btn-success:hover {
        background-color:rgb(23, 102, 7); /* Rojo aún más oscuro al pasar el mouse (Material Design red 900) */
        border-color:rgba(0, 182, 24, 0.77);
        transform: translateY(-3px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
      }
      /* Mejorar la visibilidad de los íconos */
      .text-primary {
        color: #007bff !important; /* Azul para el ícono de Admisión */
      }
      .text-success { /* Este es ahora el ícono de Emergencia (Rojo) */
        color: #D32F2F !important; /* Rojo intenso para el ícono de Emergencia */
      }

  body
    .main-content
      block content
    // Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz", crossorigin="anonymous")
    // Aquí es donde las páginas que extienden layout.pug pueden añadir sus scripts
    block scripts