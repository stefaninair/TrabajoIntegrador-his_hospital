    style.
      body {
        background-image: url('/img/fondo-hospital.png'); 
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh; 
        display: flex;
        flex-direction: column;
        justify-content: center; 
        align-items: center; 
        margin: 0;
        color: #fff; 
        
      }
      .main-content {
        background-color: rgba(0, 0, 0, 0.1); 
        padding: 0px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        max-width: 1200px; 
        width: 100%;
        text-align: center;
      }
      .card {
        background-color: rgba(0, 0, 0, 0.77); 
        padding: 0px;
        border: none;
      }
      .card-title, .card-text {
        color: #fff; 
        text-shadow: none;
      }
      
      .card-body label.form-label {
        color: #fff;
      }
      .card-body .form-control,
      .card-body .form-select,
      .card-body textarea {
        background-color: rgba(255, 255, 255, 0.8); 
        color: #333; 
        border-color: rgba(255, 255, 255, 0.4);
      }
      .card-body .form-control:focus,
      .card-body .form-select:focus,
      .card-body textarea:focus {
        background-color: #fff; 
        color: #333;
        border-color: #007bff;
        box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
      }
      
      .form-check-label {
        color: #fff; 
      }
      .form-check-inline { 
        color: #fff; 
      }


      
      .btn-primary {
        background-color: #007bff; 
        border-color: #007bff;
        color: white; 
        padding: 15px 30px;
        font-size: 1.25rem;
        border-radius: 1px;
        transition: all 0.3s ease;
      }
      .btn-primary:hover {
        background-color: #0056b3; 
        border-color: #0056b3;
        transform: translateY(-3px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
      }
      
      .btn-success { 
        background-color: #0056b3; 
        border-color:rgb(5, 65, 129);
        color: white;
        padding: 15px 30px;
        font-size: 1.25rem;
        border-radius: 1px;
        transition: all 0.3s ease;
      }
      .btn-success:hover {
        background-color:rgb(4, 105, 212); 
        border-color:rgb(20, 115, 216);
        transform: translateY(-3px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
      }
      
      .text-primary {
        color: #007bff !important; 
      }
      .text-success { 
        color: #D32F2F !important; 
      }

      .alert-success {
        background-color:rgb(12, 182, 21) !important;
        border-color: #badbcc !important;
        color:rgb(255, 255, 255) !important;
        font-weight: bold;
      }
   


