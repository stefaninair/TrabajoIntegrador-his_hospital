doctype html
html
  head
    title Tu Aplicación HIS
    // Bootstrap CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet")
    // Font Awesome CSS (si quieres usar los iconos)
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer")
    style.
      body {
        background-image: url('/img/fondo-hospital.png'); /* Asegúrate de que esta ruta sea correcta */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh; /* Asegura que el fondo cubra toda la altura */
        display: flex;
        flex-direction: column;
        justify-content: center; /* Centra el contenido verticalmente */
        align-items: center; /* Centra el contenido horizontalmente */
        margin: 0;
        color: #fff; /* Color de texto blanco para contrastar con el fondo oscuro */
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); /* Sombra para mejor lectura del texto */
      }
      .main-content {
        background-color: rgba(0, 0, 0, 0.5); /* Aumento la transparencia a 0.5 (antes 0.75) */
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        max-width: 900px; /* Ancho máximo para el contenedor del contenido */
        width: 100%;
        text-align: center;
      }
      .card {
        background-color: rgba(255, 255, 255, 0.50); /* Mantengo la opacidad de las tarjetas internas para buena legibilidad */
        padding: 40px;
        border: none;
      }
      .card-title, .card-text {
        color: #333; /* Mantengo el color de texto oscuro para las tarjetas */
        text-shadow: none;
      }
      /* Ajustes específicos para los botones */
      .btn-primary {
        background-color: #007bff; /* Azul estándar de Bootstrap */
        border-color: #007bff;
        color: white; /* Texto blanco para el botón */
        padding: 15px 30px;
        font-size: 1.25rem;
        border-radius: 8px;
        transition: all 0.3s ease;
      }
      .btn-primary:hover {
        background-color: #0056b3; /* Azul más oscuro al pasar el mouse */
        border-color: #0056b3;
        transform: translateY(-3px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
      }
      /* Cuidado: Reutilizando .btn-success y .text-success para rojo */
      .btn-success { /* Este es ahora el botón de Emergencia (Rojo) */
        background-color: #D32F2F; /* Rojo más intenso (Material Design red 700) */
        border-color: #D32F2F;
        color: white;
        padding: 15px 30px;
        font-size: 1.25rem;
        border-radius: 8px;
        transition: all 0.3s ease;
      }
      .btn-success:hover {
        background-color: #B71C1C; /* Rojo aún más oscuro al pasar el mouse (Material Design red 900) */
        border-color: #B71C1C;
        transform: translateY(-3px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
      }
      /* Mejorar la visibilidad de los íconos */
      .text-primary {
        color: #007bff !important; /* Azul para el ícono de Admisión */
      }
      .text-success { /* Este es ahora el ícono de Emergencia (Rojo) */
        color: #D32F2F !important; /* Rojo intenso para el ícono de Emergencia */
      }

  body
    .main-content
      block content
