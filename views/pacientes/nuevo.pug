extends ../layout

block content
  .container.my-5
    .card.shadow-lg.mx-auto.border-0.rounded-4(style="max-width: 800px;")
      .card-header.bg-gradient.bg-primary.text-white.text-center.py-4.rounded-top-4
        h1.mb-0.display-5 Registro de Nuevo Paciente
      .card-body.p-5
        form(action="/pacientes/nuevo", method="POST")
          .row.g-4.mb-4
            .col-md-6.form-floating
              input.form-control.rounded-3(type="text", id="nombre", name="nombre", placeholder="Nombre del Paciente", required)
              label(for="nombre") Nombre:
            .col-md-6.form-floating
              input.form-control.rounded-3(type="text", id="apellido", name="apellido", placeholder="Apellido del Paciente", required)
              label(for="apellido") Apellido:

          .row.g-4.mb-4
            .col-md-6.form-floating
              input.form-control.rounded-3(type="text", id="dni", name="dni", placeholder="Número de DNI", required)
              label(for="dni") DNI:
            .col-md-6.form-floating
              input.form-control.rounded-3(type="date", id="fecha_nacimiento", name="fecha_nacimiento", placeholder="Fecha de nacimiento")
              label(for="fecha_nacimiento") Fecha de nacimiento:

          .mb-4
            label.form-label.fw-bold.fs-5(for="sexo") Sexo:
            select.form-select.form-select-lg.rounded-3(id="sexo", name="sexo")
              option(value="M") Masculino
              option(value="F") Femenino

          .mb-4.form-floating
            input.form-control.rounded-3(type="text", id="direccion", name="direccion", placeholder="Dirección completa")
            label(for="direccion") Dirección:

          .mb-4.form-floating
            input.form-control.rounded-3(type="text", id="telefono", name="telefono", placeholder="Número de teléfono")
            label(for="telefono") Teléfono:

          .row.g-4.mb-5
            .col-md-6
              label.form-label.fw-bold.fs-5(for="id_seguro") Seguro Médico:
              select.form-select.form-select-lg.rounded-3(id="id_seguro", name="id_seguro")
                option(value="") -- Ninguno --
                each s in seguros
                  option(value=s.id)= s.nombre
            .col-md-6.form-floating
              input.form-control.rounded-3(type="text", id="nro_afiliado", name="nro_afiliado", placeholder="Número de Afiliado")
              label(for="nro_afiliado") Número de Afiliado:

          .d-flex.justify-content-center.gap-3.pt-4.border-top
            a(href="/pacientes").btn.btn-secondary.btn-lg.rounded-pill ← Volver
            button(type="submit").btn.btn-success.btn-lg.rounded-pill Guardar Paciente