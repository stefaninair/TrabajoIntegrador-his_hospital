extends ../layout

block content
  h1 Comprobante de Internación

  .comprobante-box(style="max-width: 600px; margin: auto; background: #f9f9f9; border: 1px solid #ccc; padding: 20px; border-radius: 10px; text-align: center;")
    img(src="/img/icono-comprobante.png", alt="Comprobante", style="width: 80px; margin-bottom: 15px;")
    h2 Paciente internado exitosamente

    p
      strong Nombre:
      |  #{paciente.nombre} #{paciente.apellido}

    p
      strong Tipo de internación:
      |  #{internacion.tipo_ingreso}

    p
      strong Sala (Ala):
      |  #{ala}

    p
      strong Habitación:
      |  #{habitacion.numero_habitacion}

    p
      strong Cama asignada:
      |  #{cama.numero_cama}

    br
    a(href='/pacientes', style='display:inline-block; margin-top: 15px; padding:10px 20px; background:#4CAF50; color:white; border-radius:5px; text-decoration:none;') Volver al inicio
